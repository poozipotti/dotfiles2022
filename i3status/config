wireless _first_ {
        format_up = " %essid  "
        format_down = " Down  "
}

battery 0 {
      format = "%status %percentage"
      path = "/sys/class/power_supply/CMB0/uevent"
      hide_seconds = true
      integer_battery_capacity = true
      last_full_capacity = true
      status_chr = " +"
      status_bat = ""
      status_full = ""
}

tztime local {
        format = "   %a %d/%m/%Y    %H:%M  "
}
